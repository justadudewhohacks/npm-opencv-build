{
  "compilerOptions": {
    "outDir": "dist/esm",
    "moduleResolution": "node",
    "module": "ES2020",
    "declaration": true,
    "removeComments": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "target": "ES2019",
    "sourceMap": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  },
  "include": [
    "src"
  ]
}